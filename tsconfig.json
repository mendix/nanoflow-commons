{
    "extends": "@mendix/pluggable-widgets-tools/configs/tsconfig.base",
    "include": ["./src", "./typings"],
    "compilerOptions": {
        "outDir": "dist/tsc",
        "baseUrl": ".",
        "target": "es2017",
        "lib": ["es2017", "DOM"],
        "types": ["mendix-client", "big.js", "react-native"],
        "moduleResolution": "node",
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "removeComments": false,
        "newLine": "CRLF"
    }
}
